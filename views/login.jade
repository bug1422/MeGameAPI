extends layout

block content
    h1 Login 
    form(action="/login" method="post")
        div 
            label(for="email") Email: 
            input(type="text" name="email" id="email", required)
        div
            label(for="password") Password: 
            input(type="password" name="password", id = "password", required)
        div
            button(type="submit") Login

    if message
        p.error = message

